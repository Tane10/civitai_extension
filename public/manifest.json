{
  "manifest_version": 3,
  "name": "Civitai Multi Select",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "choice.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "cookies",
    "tabs",
    "webRequest",
    "background"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["*://localhost/*", "https://civitai.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "choice.png"
  }
}
